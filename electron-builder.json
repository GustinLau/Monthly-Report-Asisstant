{
  "productName": "Monthly Report Assistant",
  "directories": {
    "output": "release/"
  },
  "releaseInfo": {
    "releaseNotes": "初始版本\n\n1. 支持自动填写月报\n2. 支持自动上传月报\n3. 支持自动发送邮件\n4. 支持自动发送钉钉消息\n5. 支持自动发送企业微信消息\n6. 支持自动发送飞书消息"
  },
  "publish": {
    "provider": "generic",
    "url": "https://electron-store.oss-cn-shenzhen.aliyuncs.com/monthly-report-assistant/"
  },
  "files": [
    "dist",
    "main.js",
    "!**/*.ts",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/"
  ],
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "artifactName": "Monthly_Report_Assistant_${version}.${ext}",
    "shortcutName": "月报小助手",
    "include": "installer.nsh",
    "guid": "73b74319-7654-522e-acdd-d765490077f2"
  },
  "afterPack": "./build/after-pack.js",
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "ia32"
        ]
      }
    ]
  }
}
